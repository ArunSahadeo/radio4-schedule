{
  "name": "radio4-schedule",
  "version": "1.0.0",
  "description": "Simple app to display current Radio 4 programme",
  "main": "main.js",
  "scripts": {
    "start": "node_modules/electron/dist/electron .",
    "watch": "webpack --watch",
    "build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.cns --prune=true --out=release-builds",
    "build-win": "electron-packager . radio4-schedule --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=AS --version-string.FileDescription=AS --version-string.ProductName=\"Radio 4 Schedule\"",
    "build-linux": "electron-packager . radio4-schedule build-with-native-modules --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "author": "Arun Sahadeo",
  "license": "MIT",
  "devDependencies": {
    "css-loader": "^0.28.7",
    "electron": "^1.7.9",
    "electron-builder": "^19.48.2",
    "electron-reload": "^1.2.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "node-sass": "^4.6.1",
    "postcss-loader": "^2.0.8",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  }
}
